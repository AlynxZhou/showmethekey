<?xml version="1.0" encoding="utf-8"?>
<schemalist>
  <schema path="/one/alynx/showmethekey/" id="one.alynx.showmethekey">
    <key type="b" name="first-time">
      <summary>First Time Launch or Not</summary>
      <description>The program is running for the first time.</description>
      <default>true</default>
    </key>
    <key type="b" name="active">
      <summary>Show Keys Win or Not</summary>
      <description>Whether keys win is active.</description>
      <default>false</default>
    </key>
    <key type="b" name="clickable">
      <summary>Clickable or Not</summary>
      <description>Whether keys win is clickable.</description>
      <default>true</default>
    </key>
    <key type="b" name="paused">
      <summary>Paused or Not</summary>
      <description>Whether keys win is paused.</description>
      <default>false</default>
    </key>
    <key type="b" name="show-shift">
      <summary>Show Shift or Not</summary>
      <description>Show shift separately or only when not consumed.</description>
      <default>true</default>
    </key>
    <key type="b" name="show-keyboard">
      <summary>Show Keyboard Key or Not</summary>
      <description>Show keyboard key.</description>
      <default>true</default>
    </key>
    <key type="b" name="show-mouse">
      <summary>Show Mouse Button or Not</summary>
      <description>Show mouse button.</description>
      <default>true</default>
    </key>
    <key type="b" name="draw-border">
      <summary>Draw Border around Keys or Not</summary>
      <description>Draw border around keys or only show keys.</description>
      <default>true</default>
    </key>
    <key type="b" name="hide-visible">
      <summary>Hide Visible Keys or Not</summary>
      <description>Hide visible keys or show all keys.</description>
      <default>false</default>
    </key>
    <key enum="one.alynx.showmethekey.SmtkKeyMode" name="mode">
      <summary>Keys Display Mode</summary>
      <description>Display keys in composed, raw or compact mode.</description>
      <default>"composed"</default>
    </key>
    <key enum="one.alynx.showmethekey.SmtkKeyAlignment" name="alignment">
      <summary>Keys Display Alignment</summary>
      <description>Align keys to end or center.</description>
      <default>"end"</default>
    </key>
    <!-- GtkSpinButton only support double, not int. -->
    <key type="d" name="width">
      <summary>Floating Window Width</summary>
      <description>The width of the floating window, in pixels.</description>
      <default>1500</default>
      <range min="0" />
    </key>
    <key type="d" name="height">
      <summary>Floating Window Height</summary>
      <description>The height of the floating window, in pixels.</description>
      <default>200</default>
      <range min="0" />
    </key>
    <key type="d" name="margin-ratio">
      <summary>Margin Ratio</summary>
      <description>Key margin ratio of keys window.</description>
      <default>0.4</default>
      <range min="0" />
    </key>
    <key type="d" name="timeout">
      <summary>Text Timeout</summary>
      <description>The inactive timeout after which text disappears, in milliseconds.</description>
      <default>0</default>
      <range min="0" />
    </key>
    <key type="s" name="layout">
      <summary>Keyboard Layout</summary>
      <description>Keyboard layout.</description>
      <default>"us"</default>
    </key>
    <key type="s" name="variant">
      <summary>Keymap</summary>
      <description>Keyboard variant.</description>
      <default>""</default>
    </key>
  </schema>
</schemalist>
